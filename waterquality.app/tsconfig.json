{
	"compileOnSave": false,
	"compilerOptions": {
		"outDir": "./dist/out-tsc",
		"baseUrl": "src",
		"sourceMap": true,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es6",
		"typeRoots": [
			"node_modules/@types"
		],
		"paths": {
			"@angular/*": [
				"../node_modules/@angular/*"
			],
			"@environment/*" : [
				"environments/*"
			],
		},
		"lib": [
			"es2016",
			"dom"
		]
	}
}